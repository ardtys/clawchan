---
import Layout from './Layout.astro'
import DocsSidebar from '@/components/docs/DocsSidebar.astro'
import PageHead from '@/components/PageHead.astro'

interface Props {
  title: string
  description?: string
}

const { title, description } = Astro.props
---

<Layout class="max-w-[1400px]">
  <PageHead slot="head" title={`${title} - Documentation`} />

  <div class="flex gap-8">
    <!-- Sidebar -->
    <DocsSidebar />

    <!-- Main Content -->
    <main class="flex-1 min-w-0 pb-16">
      <div class="docs-content">
        <slot />
      </div>
    </main>

    <!-- Right Sidebar (Table of Contents) -->
    <aside class="docs-toc sticky top-4 h-[calc(100vh-2rem)] overflow-y-auto hidden xl:block w-64">
      <div class="mb-4">
        <h4 class="font-mono text-xs font-bold text-muted-foreground uppercase tracking-wider mb-3">
          On This Page
        </h4>
        <div id="toc-container" class="space-y-2 text-sm">
          <!-- TOC will be injected by JavaScript -->
        </div>
      </div>
    </aside>
  </div>
</Layout>

<style is:global>
  /* Documentation Content Styling */
  .docs-content > * + * {
    margin-top: 2rem;
  }

  .docs-content h1 {
    font-family: var(--font-mono);
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--color-foreground);
    margin-bottom: 1rem;
  }

  .docs-content h2 {
    font-family: var(--font-mono);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-foreground);
    margin-top: 3rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-border);
    scroll-margin-top: 2rem;
  }

  .docs-content h3 {
    font-family: var(--font-mono);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-foreground);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    scroll-margin-top: 2rem;
  }

  .docs-content h4 {
    font-family: var(--font-mono);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-warm-gold);
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .docs-content p {
    font-family: var(--font-sans);
    color: var(--color-muted-foreground);
    line-height: 1.75;
  }

  .docs-content a {
    color: var(--color-cyan-glow);
    text-decoration: underline;
    transition: color 0.2s;
  }

  .docs-content a:hover {
    color: var(--color-warm-gold);
  }

  .docs-content ul {
    margin-left: 1.5rem;
  }

  .docs-content ul > li + li {
    margin-top: 0.5rem;
  }

  .docs-content li {
    font-family: var(--font-sans);
    color: var(--color-muted-foreground);
    list-style: none;
    position: relative;
  }

  .docs-content li::before {
    content: "â–¹";
    color: var(--color-cyan-glow);
    position: absolute;
    left: -1.5rem;
  }

  .docs-content ol {
    margin-left: 1.5rem;
    list-style-type: decimal;
  }

  .docs-content ol > li + li {
    margin-top: 0.5rem;
  }

  .docs-content ol li::before {
    content: none;
  }

  .docs-content code {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    background-color: var(--color-void-black);
    border: 1px solid var(--color-border);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    color: var(--color-cyan-glow);
  }

  .docs-content pre {
    background-color: var(--color-void-black);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
  }

  .docs-content pre code {
    background-color: transparent;
    border: none;
    padding: 0;
    font-size: 0.875rem;
  }

  .docs-content blockquote {
    border-left: 4px solid var(--color-warm-gold);
    background-color: rgba(212, 168, 83, 0.05);
    padding-left: 1rem;
    padding-top: 0.75rem;
    padding-bottom: 0.75rem;
    margin: 1rem 0;
    font-style: italic;
    color: var(--color-muted-foreground);
  }

  .docs-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }

  .docs-content th {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    text-align: left;
    background-color: var(--color-card-bg);
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border);
    color: var(--color-foreground);
    font-weight: 600;
  }

  .docs-content td {
    font-family: var(--font-sans);
    font-size: 0.875rem;
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border);
    color: var(--color-muted-foreground);
  }

  /* Callout Boxes */
  .callout {
    border-radius: 0.5rem;
    padding: 1rem;
    margin: 1rem 0;
    border: 1px solid;
  }

  .callout-info {
    border-color: rgba(78, 205, 196, 0.3);
    background-color: rgba(78, 205, 196, 0.05);
  }

  .callout-warning {
    border-color: rgba(245, 166, 35, 0.3);
    background-color: rgba(245, 166, 35, 0.05);
  }

  .callout-danger {
    border-color: rgba(232, 93, 93, 0.3);
    background-color: rgba(232, 93, 93, 0.05);
  }

  .callout-success {
    border-color: rgba(34, 197, 94, 0.3);
    background-color: rgba(34, 197, 94, 0.05);
  }

  .callout-title {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .callout-info .callout-title {
    color: var(--color-cyan-glow);
  }

  .callout-warning .callout-title {
    color: var(--color-amber);
  }

  .callout-danger .callout-title {
    color: var(--color-destructive);
  }

  .callout-success .callout-title {
    color: #22c55e;
  }

  /* Code Block Styling */
  .code-block {
    border-radius: 0.5rem;
    background-color: var(--color-void-black);
    border: 1px solid var(--color-border);
    overflow: hidden;
    margin: 1rem 0;
  }

  .code-block-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 1rem;
    border-bottom: 1px solid var(--color-border);
    background-color: var(--color-card-bg);
  }

  .code-block-lang {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-muted-foreground);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .code-block-copy {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    background-color: rgba(212, 168, 83, 0.1);
    color: var(--color-warm-gold);
    transition: background-color 0.2s;
    cursor: pointer;
  }

  .code-block-copy:hover {
    background-color: rgba(212, 168, 83, 0.2);
  }

  /* TOC Styling */
  .docs-toc {
    padding-left: 1rem;
    border-left: 2px solid var(--color-border);
  }

  .docs-toc a {
    display: block;
    font-family: var(--font-mono);
    font-size: 0.875rem;
    padding: 0.25rem 0;
    color: var(--color-muted-foreground);
    text-decoration: none;
    transition: color 0.2s;
  }

  .docs-toc a:hover {
    color: var(--color-cyan-glow);
  }

  .docs-toc a.active {
    color: var(--color-cyan-glow);
    font-weight: 500;
  }

  .docs-toc::-webkit-scrollbar {
    width: 4px;
  }

  .docs-toc::-webkit-scrollbar-track {
    background: transparent;
  }

  .docs-toc::-webkit-scrollbar-thumb {
    background: hsl(var(--cyan-glow) / 0.3);
    border-radius: 2px;
  }
</style>

<script>
  // Generate Table of Contents
  function generateTOC() {
    const content = document.querySelector('.docs-content')
    const tocContainer = document.getElementById('toc-container')

    if (!content || !tocContainer) return

    const headings = content.querySelectorAll('h2, h3')

    if (headings.length === 0) {
      tocContainer.innerHTML = '<p class="text-xs text-muted-foreground italic">No sections</p>'
      return
    }

    const tocHTML = Array.from(headings).map(heading => {
      const id = heading.id || heading.textContent?.toLowerCase().replace(/\s+/g, '-').replace(/[^a-z0-9-]/g, '')
      if (id && !heading.id) heading.id = id

      const level = heading.tagName === 'H2' ? 'ml-0' : 'ml-4'

      return `<a href="#${id}" class="${level}" data-toc-link>${heading.textContent}</a>`
    }).join('')

    tocContainer.innerHTML = tocHTML

    // Active TOC link on scroll
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const id = entry.target.id
          document.querySelectorAll('[data-toc-link]').forEach(link => {
            link.classList.remove('active')
            if (link.getAttribute('href') === `#${id}`) {
              link.classList.add('active')
            }
          })
        }
      })
    }, {
      rootMargin: '-100px 0px -66%'
    })

    headings.forEach(heading => {
      if (heading.id) observer.observe(heading)
    })
  }

  // Run on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', generateTOC)
  } else {
    generateTOC()
  }

  // Copy code button functionality
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement
    if (target.classList.contains('code-block-copy')) {
      const codeBlock = target.closest('.code-block')
      const code = codeBlock?.querySelector('code')?.textContent

      if (code) {
        navigator.clipboard.writeText(code)
        target.textContent = 'Copied!'
        setTimeout(() => {
          target.textContent = 'Copy'
        }, 2000)
      }
    }
  })
</script>
