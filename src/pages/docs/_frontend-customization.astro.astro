  <h3>Custom Message Formats</h3>

  <pre><code class="language-tsx">// Support for custom message types
interface CustomMessage {
  role: 'user' | 'assistant';
  content: string;
  type?: 'text' | 'code' | 'image' | 'card';
  metadata?: {
    timestamp: string;
    reactions?: string[];
    attachments?: string[];
  };
}

// Render based on type
function MessageRenderer({ message }: { message: CustomMessage }) {
  switch (message.type) {
    case 'code':
      return &lt;CodeBlock code={message.content} /&gt;;
    case 'image':
      return &lt;ImagePreview src={message.content} /&gt;;
    case 'card':
      return &lt;MessageCard data={message} /&gt;;
    default:
      return &lt;p&gt;{message.content}&lt;/p&gt;;
  }
}</code></pre>

