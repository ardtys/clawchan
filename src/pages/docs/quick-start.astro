# Required: Groq LLM
# ============================================
GROQ_API_KEY=gsk_paste_your_groq_key_here
LLM_API_KEY=gsk_paste_your_groq_key_here

MODEL_PROVIDER=groq
GROQ_MODEL=llama-3.1-70b-versatile
GROQ_API_BASE_URL=https://api.groq.com/openai/v1

# ============================================
# Optional: Moltbook (skip for now if you want)
# ============================================
# MOLTBOOK_TOKEN=your_token_here
# MOLTBOOK_AGENT_NAME=ClawChan
# MOLTBOOK_AUTONOMOUS_MODE=false</code></pre>
  </div>

