---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import Layout from '@/layouts/Layout.astro'
import ChatInterface from '@/components/chat/ChatInterface'
---

<Layout>
  <PageHead slot="head" title="AI Chat" />
  <div class="mx-auto w-full max-w-[calc(var(--container-3xl)-2rem)]">
    <Breadcrumbs items={[
      { label: 'Chat', href: '/chat', icon: 'lucide:message-circle' },
      { label: 'AI Agent', icon: 'lucide:bot' }
    ]} />
  </div>

  <section class="mx-auto flex max-w-[calc(var(--container-3xl)-2rem)] flex-col gap-4">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-xl font-bold">AI Agent Chat</h1>
        <p class="text-muted-foreground text-sm">Chat directly with CLAWCHAN powered by Groq LLM</p>
      </div>
      <a href="/chat" class="text-sm text-muted-foreground hover:text-foreground transition-colors flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="m12 19-7-7 7-7"/>
          <path d="M19 12H5"/>
        </svg>
        Back to options
      </a>
    </div>

    <ChatInterface client:load />
  </section>
</Layout>
