---

<Layout class="px-2">
  <PageHead slot="head" title="Home" />

  <AnimatedBackground client:load />
  <BootOverlay client:load />

  <!-- Hero Section -->
  <section class="mx-auto max-w-7xl px-4 pt-12 pb-8 fade-in-up">
    <div class="text-center mb-8">
      <!-- Logo & Title -->
      <div class="inline-flex items-center gap-4 mb-6">
        <div class="size-20 overflow-hidden border-2 border-cyan-glow/50 bg-gradient-to-br from-cyan-glow/20 to-warm-gold/20 hex-corners relative">
          <img src="/clawchan-logo.png" alt="CLAWCHAN" class="size-full object-cover" />
          <div class="absolute inset-0 bg-gradient-to-t from-cyan-glow/20 to-transparent"></div>
        </div>
        <div class="text-left">
          <h1 class="font-mono text-5xl font-bold text-cyan-glow neon-text uppercase tracking-wider mb-2">CLAWCHAN</h1>
          <p class="font-mono text-sm text-warm-gold uppercase tracking-wide">The Librarian of the Digital Void</p>
        </div>
      </div>

      <!-- Description -->
      <p class="mx-auto max-w-3xl text-lg text-muted-foreground leading-relaxed mb-4">
        An advanced AI agent platform powered by <span class="text-cyan-glow font-semibold">ElizaOS</span> and
        <span class="text-warm-gold font-semibold">Open Claw</span>.
        Built with two DNA strands for meticulous documentation, pragmatic security, and adaptive intelligence.
      </p>

      <!-- Key Stats - Dynamic -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto mb-8">
        {keyStats.map((stat) => (
          <div class="bento-card p-4 hover-lift">
            <div class={`text-3xl font-bold text-${stat.color} neon-text mb-1`}>{stat.icon}</div>
            <div class="font-mono text-xs text-muted-foreground uppercase">{stat.value}</div>
            <div class="font-mono text-[10px] text-muted-foreground/70">{stat.label}</div>
          </div>
        ))}
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a href="https://www.elizacloud.ai/dashboard/chat?characterId=e6a4f6c4-ef1a-40c3-87c3-9305d6dcc5c1" target="_blank" rel="noopener noreferrer"
          class="group relative flex items-center justify-center gap-3 overflow-hidden border border-cyan-glow/50 bg-gradient-to-r from-cyan-glow/10 to-warm-gold/10 p-[1px] transition-all duration-500 hover:scale-105 hover:shadow-[0_0_40px_rgba(78,205,196,0.4)] hover-glow data-panel hex-corners w-full sm:w-auto">
          <div class="flex items-center justify-center gap-3 bg-card-bg px-8 py-4 transition-all duration-300 group-hover:bg-card-bg/70 w-full">
            <Icon name="lucide:sparkles" class="size-5 text-cyan-glow float" />
            <span class="font-mono text-sm font-bold text-cyan-glow neon-text uppercase tracking-widest">Try ClawChan Now</span>
            <Icon name="lucide:external-link" class="size-4 text-warm-gold float-delayed" />
          </div>
        </a>
        <a href="/docs" class="group relative flex items-center justify-center gap-3 overflow-hidden border border-warm-gold/50 bg-gradient-to-r from-warm-gold/10 to-amber/10 p-[1px] transition-all duration-500 hover:scale-105 hover:shadow-[0_0_40px_rgba(212,168,83,0.4)] hover-glow data-panel hex-corners w-full sm:w-auto">
          <div class="flex items-center justify-center gap-3 bg-card-bg px-8 py-4 transition-all duration-300 group-hover:bg-card-bg/70 w-full">
            <Icon name="lucide:book-open" class="size-5 text-warm-gold float" />
            <span class="font-mono text-sm font-bold text-warm-gold uppercase tracking-widest">Documentation</span>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Token Section -->
  <section class="mx-auto max-w-7xl px-4 py-8">
    <div class="bento-card p-8 hover-lift relative overflow-hidden">
      <!-- Background Effect -->
      <div class="absolute inset-0 bg-gradient-to-br from-cyan-glow/5 via-transparent to-warm-gold/5"></div>

      <div class="relative z-10">
        <div class="text-center mb-8">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-cyan-glow/10 border border-cyan-glow/30 rounded-full mb-4">
            <Icon name="lucide:coins" class="size-5 text-cyan-glow" />
            <span class="font-mono text-sm text-cyan-glow uppercase tracking-wider">Official Token</span>
          </div>
          <h2 class="font-mono text-4xl font-bold text-foreground mb-2 uppercase tracking-wide">{tokenInfo.name}</h2>
          <p class="text-muted-foreground">The native utility token powering the ClawChan ecosystem</p>
        </div>

        <!-- Contract Address -->
        <div class="max-w-2xl mx-auto mb-8">
          <div class="bento-card p-4 bg-background/50">
            <div class="flex items-center justify-between gap-4 flex-wrap">
              <div>
                <p class="font-mono text-[10px] text-muted-foreground uppercase tracking-wider mb-1">Contract Address ({tokenInfo.network})</p>
                <p class="font-mono text-lg text-warm-gold break-all">{tokenInfo.ca}</p>
              </div>
              <button class="px-4 py-2 bg-cyan-glow/10 border border-cyan-glow/30 hover:bg-cyan-glow/20 transition-all duration-300 rounded font-mono text-xs text-cyan-glow uppercase tracking-wider flex items-center gap-2">
                <Icon name="lucide:copy" class="size-4" />
                Copy
              </button>
            </div>
          </div>
        </div>

        <!-- View Chart Button -->
        <div class="flex justify-center">
          <a
            href={`https://dexscreener.com/base/${tokenInfo.ca}`}
            target="_blank"
            rel="noopener noreferrer"
            class="group relative flex items-center justify-center gap-3 overflow-hidden border border-warm-gold/50 bg-gradient-to-r from-warm-gold/10 to-amber/10 p-[1px] transition-all duration-500 hover:scale-105 hover:shadow-[0_0_40px_rgba(212,168,83,0.4)] hover-glow data-panel hex-corners"
          >
            <div class="flex items-center justify-center gap-3 bg-card-bg px-8 py-4 transition-all duration-300 group-hover:bg-card-bg/70">
              <Icon name="lucide:line-chart" class="size-5 text-warm-gold float" />
              <span class="font-mono text-sm font-bold text-warm-gold uppercase tracking-widest">View Chart</span>
              <Icon name="lucide:external-link" class="size-4 text-amber float-delayed" />
            </div>
          </a>
        </div>

      </div>
    </div>
  </section>

  <!-- Roadmap Section -->
  <section class="mx-auto max-w-7xl px-4 py-8">
    <div class="text-center mb-12">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-warm-gold/10 border border-warm-gold/30 rounded-full mb-4">
        <Icon name="lucide:map" class="size-5 text-warm-gold" />
        <span class="font-mono text-sm text-warm-gold uppercase tracking-wider">Development Roadmap</span>
      </div>
      <h2 class="font-mono text-3xl font-bold text-foreground mb-2 uppercase tracking-wide">Building The Future</h2>
      <p class="text-muted-foreground max-w-2xl mx-auto">Our journey to create the ultimate AI agent ecosystem</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {roadmap.map((phase, index) => (
        <div class={`bento-card p-6 hover-lift relative ${phase.status === 'in-progress' ? 'border-2 border-cyan-glow/50' : ''}`}>
          {/* Quarter Header */}
          <div class="text-center mb-4">
            <h3 class={`font-mono text-2xl font-bold uppercase ${
              phase.status === 'in-progress' ? 'text-cyan-glow neon-text' : 'text-foreground'
            }`}>{phase.quarter}</h3>
            <p class="font-mono text-xs text-muted-foreground uppercase tracking-wider mt-1">{phase.title}</p>
          </div>

          {/* Milestones */}
          <ul class="space-y-3">
            {phase.milestones.map((milestone) => (
              <li class="flex items-start gap-2">
                <div class={`mt-1 size-4 flex-shrink-0 flex items-center justify-center rounded-full ${
                  milestone.done
                    ? 'bg-cyan-glow/20 border border-cyan-glow'
                    : 'bg-muted/50 border border-muted-foreground/30'
                }`}>
                  {milestone.done && <Icon name="lucide:check" class="size-2.5 text-cyan-glow" />}
                </div>
                <span class={`text-sm leading-tight ${
                  milestone.done ? 'text-foreground' : 'text-muted-foreground'
                }`}>{milestone.text}</span>
              </li>
            ))}
          </ul>

          {/* Progress Bar for In-Progress */}
          {phase.status === 'in-progress' && (
            <div class="mt-6">
              <div class="flex justify-between text-[10px] font-mono text-muted-foreground mb-2">
                <span>Progress</span>
                <span class="text-cyan-glow">{Math.round((phase.milestones.filter(m => m.done).length / phase.milestones.length) * 100)}%</span>
              </div>
              <div class="h-2 bg-muted/30 rounded-full overflow-hidden">
                <div
                  class="h-full bg-gradient-to-r from-cyan-glow to-warm-gold rounded-full transition-all duration-500"
                  style={`width: ${(phase.milestones.filter(m => m.done).length / phase.milestones.length) * 100}%`}
                ></div>
              </div>
            </div>
          )}
        </div>
      ))}
    </div>
  </section>

  <!-- DNA Strands Section - Dynamic -->
  <section class="mx-auto max-w-7xl px-4 py-8">
    <div class="text-center mb-8">
      <h2 class="font-mono text-3xl font-bold text-foreground mb-2 uppercase tracking-wide">Two DNA Strands</h2>
      <p class="text-muted-foreground max-w-2xl mx-auto">ClawChan's unique architecture combines two powerful frameworks into one unified intelligence</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
      {dnaStrands.map((strand) => (
        <div class={`bento-card p-6 hover-lift ${strand.effect}`}>
          <div class="flex items-center gap-3 mb-4">
            <div class={`size-12 rounded-lg bg-${strand.color}/10 border border-${strand.color}/30 flex items-center justify-center`}>
              <Icon name={strand.icon} class={`size-6 text-${strand.color}`} />
            </div>
            <div>
              <h3 class={`font-mono text-lg font-bold text-${strand.color} uppercase`}>{strand.name}</h3>
              <p class="font-mono text-[10px] text-muted-foreground uppercase">{strand.subtitle}</p>
            </div>
          </div>
          <p class="text-sm text-muted-foreground leading-relaxed mb-4">{strand.description}</p>
          <ul class="space-y-2">
            {strand.features.map((feature) => (
              <li class="flex items-start gap-2 text-sm text-muted-foreground">
                <Icon name="lucide:check" class={`size-4 text-${strand.color} mt-0.5 flex-shrink-0`} />
                <span>{feature}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </section>

  <!-- Tech Stack - Dynamic -->
  <section class="mx-auto max-w-7xl px-4 py-8">
    <div class="text-center mb-8">
      <h2 class="font-mono text-3xl font-bold text-foreground mb-2 uppercase tracking-wide">Powered By Modern Tech</h2>
      <p class="text-muted-foreground max-w-2xl mx-auto">Built with cutting-edge technologies for maximum performance and reliability</p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      {techStack.map((tech) => (
        <div class="bento-card p-6 hover-lift text-center">
          <div class={`size-12 mx-auto mb-3 rounded-lg bg-${tech.color}/10 border border-${tech.color}/30 flex items-center justify-center`}>
            <Icon name={tech.icon} class={`size-7 text-${tech.color}`} />
          </div>
          <h4 class="font-mono text-sm font-bold text-foreground mb-1">{tech.name}</h4>
          <p class="font-mono text-[10px] text-muted-foreground">{tech.desc}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Use Cases - Dynamic -->
  <section class="mx-auto max-w-7xl px-4 py-8">
    <div class="text-center mb-8">
      <h2 class="font-mono text-3xl font-bold text-foreground mb-2 uppercase tracking-wide">Built For Multiple Scenarios</h2>
      <p class="text-muted-foreground max-w-2xl mx-auto">From personal assistance to enterprise deployments</p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {useCases.map((useCase) => (
        <div class="bento-card p-6 hover-lift">
          <div class="flex items-center gap-3 mb-3">
            <Icon name={useCase.icon} class={`size-6 text-${useCase.color}`} />
            <h4 class="font-mono text-base font-bold text-foreground uppercase">{useCase.title}</h4>
          </div>
          <p class="text-sm text-muted-foreground leading-relaxed">{useCase.desc}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Capabilities - Dynamic -->
  <section class="mx-auto max-w-7xl px-4 py-8">
    <div class="text-center mb-8">
      <h2 class="font-mono text-3xl font-bold text-foreground mb-2 uppercase tracking-wide">Advanced Capabilities</h2>
      <p class="text-muted-foreground max-w-2xl mx-auto">Everything you need in a modern AI agent platform</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {capabilities.map((cap) => (
        <div class={`bento-card p-6 hover-lift ${cap.effect}`}>
          <div class="flex items-start gap-4">
            <div class={`size-10 rounded-lg bg-${cap.color}/10 border border-${cap.color}/30 flex items-center justify-center flex-shrink-0`}>
              <Icon name={cap.icon} class={`size-5 text-${cap.color}`} />
            </div>
            <div>
              <h4 class="font-mono text-base font-bold text-foreground mb-2 uppercase">{cap.title}</h4>
              <p class="text-sm text-muted-foreground leading-relaxed mb-3">{cap.desc}</p>
              <div class={`flex items-center gap-2 text-xs text-${cap.color}`}>
                <Icon name={cap.statIcon} class="size-3" />
                <span class="font-mono">{cap.stat}</span>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Getting Started - Dynamic -->
  <section class="mx-auto max-w-7xl px-4 py-8 mb-8">
    <div class="bento-card p-8 hover-lift">
      <div class="text-center mb-8">
        <h2 class="font-mono text-3xl font-bold text-foreground mb-2 uppercase tracking-wide">Get Started in 5 Minutes</h2>
        <p class="text-muted-foreground max-w-2xl mx-auto">Deploy your own ClawChan instance with just a few commands</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        {steps.map((step) => (
          <div class="text-center">
            <div class={`size-16 mx-auto mb-4 rounded-full bg-${step.color}/10 border border-${step.color}/30 flex items-center justify-center`}>
              <span class={`font-mono text-2xl font-bold text-${step.color}`}>{step.num}</span>
            </div>
            <h4 class="font-mono text-sm font-bold text-foreground mb-2 uppercase">{step.title}</h4>
            <p class="text-xs text-muted-foreground leading-relaxed">{step.desc}</p>
          </div>
        ))}
